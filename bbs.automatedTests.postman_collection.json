							"function JSONLength(obj) {\r",
							"    var size = 0, key;\r",
							"    for (key in obj) {\r",
							"        if (obj.hasOwnProperty(key)) size++;\r",
							"    }\r",
							"    return size;\r",
							"}\r",
							"\r",
							"var data = pm.response.json()\r",
							"\r",
							"tests[\"Status code is 200\"] = responseCode.code === 200;\r",
							"tests[\"response count\"] = JSONLength(data) === 2;"
